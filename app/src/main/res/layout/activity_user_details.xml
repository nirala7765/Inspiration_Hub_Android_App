<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/inpirelogo"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#63515050"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Details Below"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:background="@drawable/bgbox"

                />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/EtxtUname"
                android:hint="Enter Your Full Name"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:textColorHint="#3C3A3A"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/person"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EtxtUnumber"
                android:hint="Enter your mobile number"
                android:textColorHint="#3C3A3A"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="10"
                android:drawableLeft="@drawable/smartphone_icon"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EtxtUemail"
                android:hint="Enter Your Email"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#fff"
                android:textColorHint="#3C3A3A"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/email_icon"


                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EtxtUserid"
                android:hint="Create Your Username"
                android:textSize="20dp"
                android:gravity="center"
                android:background="#fff"
                android:textColorHint="#3C3A3A"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="text"
                android:drawableLeft="@drawable/baseline_verified_user_24"


                />


            <Button

                android:layout_width="120dp"
                android:layout_height="60dp"
                android:id="@+id/btnNext"
                android:text="Next"
                android:textSize="25dp"
                android:onClick="process"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="3dp"
        android:backgroundTint="#4B1432DA"
        android:layout_marginTop="20dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Will be Shown Here!"
            android:textSize="20dp"
            android:id="@+id/txtAdv"
            android:gravity="center"
            android:textColor="@color/black"


            />

    </androidx.cardview.widget.CardView>


</LinearLayout>